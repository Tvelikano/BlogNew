@model Blog.Site.Models.UserViewModel
@{
    ViewBag.Title = "Edit User";
}

<h2>Edit user @Model.UserName</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PasswordConfirm, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-check">
            Add To Roles:
            <div class="col-md-10">
                @if (ViewBag.Roles != null)
                {

                    foreach (var role in ViewBag.Roles)
                    {
                        if (Model.AppRoles.Any(r => r.Name == role.Name))
                        {
                            <input type="checkbox" class="form-check-input" id="@role.Name" name="rolesToAdd" value="@role.Name" checked="checked">
                        }
                        else
                        {
                            <input type="checkbox" class="form-check-input" id="@role.Name" name="rolesToAdd" value="@role.Name">
                        }
                        <label class="form-check-label" for="@role.Name">@role.Name</label><br>
                    }
                }
            </div>
        </div>
        <div class="col-md-10">
            <input class="btn btn-primary" type="submit" value="Save" />
        </div>
    </div>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
}